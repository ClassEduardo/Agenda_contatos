<%- include('./includes/head') %>
<%- include('./includes/navBar') %>
   
<section class="container">

      <div class="row align-items-center">
         <div class="col-2"></div>

         <div class="col-8 my-3">
            <h1 class="display-1 text-center fw-semibold mb-4">Login ou Cadastro</h1>
            <p class="text-center lead fw-normal fs-3 mb-4">Faça login ou cadastre-se.</p>

            <%- include('./includes/massages') %>

            <div class="row align-items-start">
               <div class="col-lg">
                  <h4 class="text-center fs-1 mb-3">Login</h4>

                  <form action="/login/login" method="post" class="text-start">
                     <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                     <div class="mb-3">
                        <div class="form-text mb-2 fs-6">Se já possui conta realize o login.</div>
                        <label class="form-label fs-4">Seu e-mail</label>
                        <input type="email" class="form-control w-75" name="email">
                     </div>
                     <div class="mb-3">
                       <label class="form-label fs-4">Sua senha</label>
                       <input type="password" class="form-control w-50" name="password">
                     </div>
                     <button type="submit" class="btn btn-primary">Entrar</button>
                   </form>
               </div>

               <div class="col-lg">
                  <h4 class="text-center fs-1 mb-3">Cadastro</h4>
                  <div class="form-text mb-2 fs-6">Faça um cadastro se ainda não possuir conta.</div>

                  <form action="/login/register" method="post" class="text-start">
                     <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                     <div class="mb-3">
                       <label class="form-label fs-4">Seu e-mail</label>
                       <input type="email" class="form-control w-75" name="email">
                       <div class="form-text fs-6">Nunca compartilharemos seu e-mail com mais ninguém.</div>
                     </div>
                     <div class="mb-3">
                       <label class="form-label fs-4">Sua senha</label>
                       <input type="password" class="form-control w-50" name="password">
                     </div>
                     <button type="submit" class="btn btn-primary">Registrar</button>
                   </form>
               </div>
            </div>
         </div>
         
      </div>
   </div>
</section>
  
<%- include('./includes/footer') %>
